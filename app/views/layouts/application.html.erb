<%# This file wraps all of your views. %>
<%# Thus, anything you put in here will be displayed on every page. %>


<!DOCTYPE html>
<html>
  <head>
    <title>AlphaBlog2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%# <%
      print "\n--------------------------------------------------\n"
      print "INSIDE application.html.erb\n"
      print "flash: #{flash}\n"
      print "flash.class: #{flash.class}\n"
      print "flash[:notice]: #{flash[:notice]}\n"
      print "--------------------------------------------------\n\n"
    %> 
    

    <% flash.each do |name, msg| %>

      <ul>
        <li><%= msg %></li>
      </ul>

    <% end %>

    <%= yield %>
  </body>
</html>
